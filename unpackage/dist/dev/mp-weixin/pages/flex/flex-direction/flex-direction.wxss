.container{
		/* 定义flex容器 */
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		/* 
			设置容器内部元素的排列方向
			row: 定义排列方向 从左到右
			row-reverse: 从右到左
		 */
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
}
